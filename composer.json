{
  "name": "moomoo\/plugin-platform",
  "description": "OOP based platform for creating Wordpress plugins",
  "license": "GPL-3.0",
  "autoload": {
    "psr-4": {
      "MooMoo\\Platform\\Bundle\\": "src/Bundle/"
    }
  },
  "require": {
    "wp-cli/wp-cli": "v2.1.*",
    "symfony/config": "4.2.*",
    "symfony/dependency-injection": "4.2.*",
    "symfony/http-foundation": "4.2.*",
    "symfony/yaml": "4.2.*",
    "symfony/templating": "4.2.*",
    "symfony/twig-bridge": "4.2.*",
    "dg/composer-cleaner": "^2.0"
  },
  "scripts" : {
    "post-install-cmd" : [
      "[[ -f /usr/bin/wp ]] || sudo ln -s ./../wp-cli/wp-cli/bin/wp /usr/bin/wp",
      "source ./../wp-cli/wp-cli/utils/wp-completion.bash",
      "[[ -f ~/.bash_profile ]] || touch ~/.bash_profile",
      "source ~/.bash_profile"
    ]
  }
}
